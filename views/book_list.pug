extends layout

block content

  h1= title

  ul
    - book_list.sort(function(a, b) {let textA = a.title.toUpperCase(); let textB = b.title.toUpperCase(); return (textA < textB) ? -1 : (textA > textB) ? 1 : 0;});
    each book in book_list
      li
        a(href=book.url) #{book.title}
        // each book is defined as two lines, using the pipe for the second line.
        // This approach is needed because if the author name were on the previous line
        // then it would be part of the hyperlink.
        |  (#{book.author.name})

    else
      li There are no books.